<package-info xmlns="http://www.elkarte.net/site/package-info" xmlns:elk="http://www.elkarte.net/">
    <id>inter:elga</id>
    <name>Elga</name>
    <version>0.0.1</version>
    <type>modification</type>
    <install for="1.0.4 - 1.0.99">
        <readme type="inline">This will install Elga</readme>
        <require-file name="Elga.controller.php" destination="CONTROLLERDIR" />
        <require-file name="Elga.template.php" destination="THEMEDIR" />
        <require-file name="Elga.subs.php" destination="SUBSDIR" />
        <require-file name="elga.css" destination="THEMEDIR/css" />
        <require-file name="jquery.jscroll.min.js" destination="THEMEDIR/scripts" />
        <require-dir name="elga_lib" destination="EXTDIR" />
        <hook hook="integrate_actions" file="SUBSDIR/Elga.subs.php" function="elga_actions" />
        <hook hook="integrate_menu_buttons" file="SUBSDIR/Elga.subs.php" function="elga_menu_buttons" />
        <!--<code>Hooks.php</code>-->
        <database>install.php</database>
        <redirect url="?area=addonsettings;sa=general" timeout="500" />
    </install>

    <uninstall for="1.0.4 - 1.0.99">
        <readme type="inline">This will uninstall Elga</readme>
        <hook reverse="true" hook="integrate_actions" file="SUBSDIR/Elga.subs.php" function="elga_actions" />
        <hook reverse="true" hook="integrate_menu_buttons" file="SUBSDIR/Elga.subs.php" function="elga_menu_buttons" />
        <remove-file name="CONTROLLERDIR/Elga.controller.php" />
        <remove-file name="THEMEDIR/Elga.template.php" />
        <remove-file name="SUBSDIR/Elga.subs.php" />
        <remove-file name="THEMEDIR/css/elga.css" />
        <remove-file name="THEMEDIR/scripts/jquery.jscroll.min.js" />
        <remove-dir name="EXTDIR/elga_lib" />
        <hook reverse="true" hook="integrate_actions" file="SUBSDIR/Elga.subs.php" function="elga_actions" />
        <hook reverse="true" hook="integrate_menu_buttons" file="SUBSDIR/Elga.subs.php" function="elga_menu_buttons" />
        <!--<code>Hooks.php</code>-->
        <!--<database>uninstall.php</database>-->
        <redirect url="?action=admin;area=packages" timeout="500" />
    </uninstall>
</package-info>
